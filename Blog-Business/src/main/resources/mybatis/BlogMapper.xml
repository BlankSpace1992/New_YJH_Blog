        <result column="user_uid" jdbcType="VARCHAR" property="userUid"/>
        <result column="article_source" jdbcType="BOOLEAN" property="articleSource"/>
        <result column="blogSortName" jdbcType="VARCHAR" property="blogSortName"/>
